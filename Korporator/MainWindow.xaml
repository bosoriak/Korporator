<Window x:Class="Korporator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Korporator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            

        </Grid.RowDefinitions>
        <Label Content="Ask your question (optional):"/>
        <TextBox TextWrapping="Wrap" Grid.Row="1" Name="MyTextBox" Margin="10" MaxLength="300"/>
        <Button Height="75" Foreground="Black" Background="LawnGreen" Margin="30,13,471,12" Grid.Column="0" Grid.Row="2" Click="Button_Click" FontSize="20">Get your answer here</Button>
        <Button Height="75" Foreground="Black" Background="LightBlue" Margin="535,10,30,10" Grid.Column="0" Grid.Row="2" Click="Button_Click_1">Clear</Button>
        <TextBox Name="AnswerTextBlock" Grid.Column="0" Grid.Row="3" IsReadOnly="True"/>
    </Grid>
</Window>
